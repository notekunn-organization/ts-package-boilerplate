{
    "name": "ts-package-boilerplate",
    "version": "1.0.0",
    "description": "Boilder template to write typescript project",
    "main": "lib/index.js",
    "types": "src/@types/index.d.ts",
    "scripts": {
        "test": "mocha -r ts-node/register test/**/*.spec.ts",
        "format": "prettier --write '*/**/*.{js,ts,tsx,json}'",
        "lint": "eslint '*/**/*.{js,ts,tsx,json}' --fix"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/notekunn-organization/ts-package-boilerplate.git"
    },
    "keywords": [
        "typescript",
        "boilerplate",
        "npm",
        "package"
    ],
    "author": "Trần Đức Cường <clonebmn2itt@gmail.com>",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/notekunn-organization/ts-package-boilerplate/issues"
    },
    "homepage": "https://github.com/notekunn-organization/ts-package-boilerplate#readme",
    "devDependencies": {
        "@types/chai": "^4.2.15",
        "@types/mocha": "^8.2.1",
        "@types/node": "^14.14.31",
        "chai": "^4.3.0",
        "eslint": "^7.21.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "husky": "^4.3.8",
        "lint-staged": "^10.5.4",
        "mocha": "^8.3.0",
        "prettier": "^2.2.1",
        "ts-node": "^9.1.1",
        "typescript": "^4.2.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts,tsx,json}": [
            "eslint --fix"
        ]
    }
}
